{
  "name": "@t3n/theme",
  "version": "0.1.9",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/t3n/react-packages.git"
  },
  "description": "t3n theme configuration to use with @t3n/components",
  "main": "dist/bundle.js",
  "types": "src/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist && rm -rf .awcache",
    "check-types": "tsc",
    "start": "webpack --watch",
    "build": "NODE_ENV=production webpack",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "@styled-system/theme-get": "^5.0.21",
    "@types/jest": "^24.0.17",
    "@types/lodash": "^4.14.123",
    "@types/styled-system": "^5.0.1",
    "lodash": "^4.17.15",
    "polished": "^3.1.0",
    "styled-system": "^5.0.21"
  },
  "devDependencies": {
    "@t3n/configs": "^0.1.8",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "displayName": "theme",
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "testEnvironment": "node",
    "testRegex": [
      "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
